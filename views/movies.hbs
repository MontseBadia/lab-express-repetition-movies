<div class='main-container'>
  <h1>Cinema</h1>
  <p>Click on the movie to check the showtimes!</p>

  <div class='movies-container'>
    {{#each allMovies}}
      <div class='each-movie-container'>
        <img src='{{this.image}}'>
        <p>{{this.title}}</p>
        <p><a href="movies/{{this._id}}">See more</a></p> {{!-- href always with double quotes!!!" " --> always in html --}}
      </div>
    {{/each}}
  </div>
</div>